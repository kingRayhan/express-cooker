.container
    .row
        .col-md-8.mx-auto
            if locals.flashes.errors
                each msg in locals.flashes.errors
                    .alert.alert-danger(role='alert')
                        | #{msg}

            if locals.flashes.error_msg
                    .alert.alert-danger(role='alert')
                        | #{locals.flashes.error_msg}

            if locals.flashes.success_msg
                    .alert.alert-primary(role='alert')
                        | #{locals.flashes.success}