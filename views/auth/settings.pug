block content
    .container
        .row
            .col-md-8.mx-auto
                h1 Settings Page
                form(action="/settings" method="post")
                    .form-group
                        label(for="name") Name
                        input.form-control(type="text", name="name" value=name)
                    .form-group
                        label(for="name") Email
                        input.form-control(type="email", name="email" value=email)
       
                    .form-group
                        button.btn.btn-primary(type="submit") Update